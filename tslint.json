{
  "extends": [
    "tslint-microsoft-contrib/latest",
    "tslint:latest",
    "tslint-no-circular-imports",
    "tslint-react",
    "tslint-immutable"
  ],
  "rules": {
    // tslint
    "array-type": [
      true,
      "array"
    ],
    "interface-name": [
      true,
      "never-prefix"
    ],
    "no-implicit-dependencies": [
      true,
      "dev"
    ],
    "no-submodule-imports": [
      true,
      "antd"
    ],
    "ordered-imports": {
      "options": {
        "grouped-imports": true,
        "groups": [
          {
            "name": "External imports",
            "match": "^(?!heroes-)(?!\\.).+",
            "order": 10
          },
          {
            "name": "Project imports",
            "match": "^heroes-",
            "order": 20
          },
          {
            "name": "Style imports",
            "match": "^\\./.+\\.scss$",
            "order": 30
          },
          {
            "name": "Asset imports",
            "match": "^\\..*/assets$",
            "order": 40
          },
          {
            "name": "README imports",
            "match": "^\\./README",
            "order": 50
          },
          {
            "name": "Relative imports",
            "match": "^\\.",
            "order": 60
          }
        ]
      }
    },
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ],
    // tslint-no-circular-imports
    "no-circular-imports": true,
    // tslint-immutable
    "no-array-mutation": false,
    "no-class": false,
    "no-delete": false,
    "no-expression-statement": false,
    "no-if-statement": false,
    "no-let": false,
    "no-loop-statement": true,
    "no-method-signature": false,
    "no-mixed-interface": false,
    "no-object-mutation": false,
    "no-this": false,
    "no-throw": false,
    "no-try": false,
    "readonly-array": false,
    "readonly-keyword": true,
    // tslint-microsoft-contrib
    "prefer-array-literal": [
      true,
      {
        "allow-size-argument": true
      }
    ],
    "prefer-type-cast": false,
    "export-name": false,
    "import-name": false,
    "insecure-random": false,
    "max-func-body-length": false,
    "mocha-no-side-effect-code": false,
    "no-relative-imports": false,
    "no-suspicious-comment": false,
    "react-a11y-event-has-role": false,
    "react-a11y-img-has-alt": false,
    "react-this-binding-issue": false,
    "react-unused-props-and-state": [
      true,
      {
        "props-interface-regex": "Props$",
        "state-interface-regex": "State$"
      }
    ],
    "use-simple-attributes": false
  }
}
