{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "lib": [
      "es6",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "heroes-helpers": [
        "./helpers"
      ],
      "heroes-test-helpers": [
        "./tests/helpers"
      ]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react"
  }
}
